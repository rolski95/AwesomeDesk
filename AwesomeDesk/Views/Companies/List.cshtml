@model IEnumerable<AwesomeDesk.Models.Company>
@using AwesomeDesk.Extensions
@{
    ViewBag.Title = "Firmy";
    Layout = "~/Views/Shared/_LayoutAssistant.cshtml";
}

<h2>Firmy</h2>

<p>

    @Html.ImageActionLink("", "Create", "Companies", null, new { @title = "Dodaj nową firmę" }, "~/Images/add.png", "40", "40")
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered ro-datatable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CmP_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CmP_PhoneNumber)
                </th>
                <th >
                    @Html.DisplayNameFor(model => model.CmP_PageAdress)
                </th >
                <th class="ro-w-3">Dostępne akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CmP_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CmP_PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CmP_PageAdress)
                    </td>
                    <td >
                       
                        @Html.ImageActionLink("", "Edit", "Companies", new { id = item.CmP_ID }, new { @title = "Edytuj firmę" }, "~/Images/edit.png", "20", "20")
                    </td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CmP_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CmP_PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CmP_PageAdress)
                </th>
                <th>Dostępne akcje</th>
            </tr>
        </tfoot>
    </table>
</div>