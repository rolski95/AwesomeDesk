@model IEnumerable<AwesomeDesk.Models.CustomerListViewModel>

@{
    ViewBag.Title = "Lista klientów";
    Layout = "~/Views/Shared/_LayoutAssistant.cshtml";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Dodaj nowego", "Create")
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered" >
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CuS_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CuS_Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CuS_Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CuS_PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CmP_Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CuS_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CuS_Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CuS_Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CuS_PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CmP_Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CuS_Email }) |
                        @Html.ActionLink("Details", "Details", new { id = item.CuS_Email }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CuS_Email })
                    </td>
                </tr>
            }

        </tbody>
    </table>
    </div>