@model AwesomeDesk.Models.IndexViewModel
@{
    ViewBag.Title = "Zarządzaj swoim kontem";
    Layout = @ViewBag.Layout;
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Zmień swoje hasło", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Utwórz swoje hasło", "SetPassword")
            }
            ]
        </dd>        
    </dl>
</div>
