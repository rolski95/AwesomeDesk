@model AwesomeDesk.Models.AssistantCreateTicketViewModel

@{
    ViewBag.Title = "AwesomeDesk - Nowe zgłoszenie";
    Layout = "~/Views/Shared/_LayoutAssistant.cshtml";
}

<h2>Nowe zgłoszenie</h2>

@using (Html.BeginForm("CreateAssistant", "Tickets"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.TiH_Subject, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TiH_Subject, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TiH_Subject, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TiP_Content, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TiP_Content, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TiP_Content, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TiP_ASSID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.TiP_ASSID, new SelectList(Model.Assistants, "ID", "AsS_FullName "), htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TiP_ASSID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TiH_CMPID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.TiH_CMPID, new SelectList(Model.Companies, "CMP_ID", "CmP_Name "), htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TiH_CMPID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Utwórz" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Powrót", "List")
</div>
