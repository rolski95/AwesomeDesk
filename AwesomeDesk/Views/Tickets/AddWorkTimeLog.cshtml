@model AwesomeDesk.Models.TicketWorkLogViewModel

@using (Html.BeginForm("AddWorkTimeLog", "Tickets"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <br />
        <br />
        <h4>Dodaj nowy element dziennika pracy</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        
                <div class="form-group">
                    @Html.LabelFor(model => model.TwL_StartDate, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="form-group">
                            <div class="input-group date" id="timeStart" data-target-input="nearest" onchange="setspendMinutes(); return false;">
                                @Html.TextBoxFor(model => model.TwL_StartDate, new { @class = " form-control datetimepicker-input", @data_target = "#timeStart", @onchange = "setspendMinutes(); return false;" })
                                <div class="input-group-append" data-target="#timeStart" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.TwL_StartDate, "", new { @class = "text-danger" })
                    </div>
                </div>
    
      
                <div class="form-group">
                    @Html.LabelFor(model => model.TwL_EndDate, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="form-group">
                            <div class="input-group date" id="timeEnd" data-target-input="nearest" onchange="setspendMinutes(); return false;">
                                @Html.TextBoxFor(model => model.TwL_EndDate, new { @class = " form-control datetimepicker-input", @data_target = "#timeEnd", @onchange = "setspendMinutes(); return false;" })
                                <div class="input-group-append" data-target="#timeEnd" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.TwL_EndDate, "", new { @class = "text-danger" })
                    </div>
                </div>
      
        <div class="form-group">
            @Html.LabelFor(model => model.TwL_SpendHours, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TwL_SpendHours, new { htmlAttributes = new { @class = "form-control", @id = "timeHours", @onchange = "setdatetimes(); return false;" } })
                @Html.ValidationMessageFor(model => model.TwL_SpendHours, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.TwL_SpendMinutes, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TwL_SpendMinutes, new { htmlAttributes = new { @class = "form-control", @id = "timeMinutes", @onchange = "setdatetimes(); return false;" } })
                @Html.ValidationMessageFor(model => model.TwL_SpendMinutes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TwL_Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TwL_Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TwL_Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TwL_PublicDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.TwL_PublicDescription)
                    @Html.ValidationMessageFor(model => model.TwL_PublicDescription, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.HiddenFor(model => Model.TwL_TIHID)
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </div>
    </div>
            }

